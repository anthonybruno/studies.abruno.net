---
import '@/styles/global.css';

interface Props {
  back?: boolean;
  title?: string;
  backLabel?: string;
  backRoute?: string;
}

const {
  back = false,
  backRoute = '/',
  backLabel = 'Back to Home',
  title = 'Anthony Bruno · Lead Front-End Developer · Denver, CO',
} = Astro.props;
const OGDescription =
  "I'm an experienced front-end developer passionate about leading projects and delivering high-quality experiences.";
---

<html lang="en" class="text-[15px]">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>✌️</text></svg>"
    />

    <meta name="title" content={title} />
    <meta name="description" content={OGDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://studies.abruno.net" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={OGDescription} />
    <meta
      property="og:image"
      content="https://studies.abruno.net/og-share.png"
    />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={OGDescription} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:image"
      content="https://studies.abruno.net/og-share.png"
    />
  </head>
  <body
    class="before:bg-theme bg-tony-off-white dark:bg-tony-800 text-tony-700 dark:text-tony-100 px-5 font-sans text-lg before:fixed before:top-0 before:left-0 before:h-1.5 before:w-full md:px-10"
  >
    <div class="mx-auto max-w-6xl grid-cols-12 gap-5 pt-12 md:pt-24 lg:grid">
      {
        back && (
          <nav class="col-span-2 col-start-2 max-lg:mx-auto max-lg:pb-12">
            <a
              class="text-tony-500 hover:text-theme-hover sticky top-10 text-base leading-none font-medium whitespace-nowrap transition-colors"
              href={backRoute}
            >
              ← {backLabel}
            </a>
          </nav>
        )
      }
      <div class:list={['col-span-6', { 'col-start-4': back === false }]}>
        <main>
          <slot />
        </main>
        <footer class="pt-36 pb-14">
          <small class="text-tony-500 text-base">
            &copy; {new Date().getFullYear()}
          </small>
        </footer>
      </div>
    </div>
  </body>
</html>
